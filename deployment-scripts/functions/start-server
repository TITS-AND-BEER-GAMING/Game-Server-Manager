#! /bin/bash
# Start the server

startServer() {
    # Run the server startup script
    cd $SERVER_FILES
    $START

    # Check that the server has started
    RUNNING_PID=$!
    setGrepPid
    
    if [[ $(ps -aux | grep $GREP_PID) ]]
    then
        success 'Server started! PID:'$RUNNING_PID
        updatePID $RUNNING_PID
    else
        error 'Failed to start server'
        updatePID ''
        exit 1
    fi
}
